<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/row_map"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:src="@android:drawable/ic_menu_myplaces" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/row_header_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_header_location" />

        <TextView
            android:id="@+id/row_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/row_header_preferred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/row_header_preferred" />

        <TextView
            android:id="@+id/row_text_preferred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
        
        <ImageButton
        android:id="@+id/row_button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_delete" />
        
        <ImageButton
        android:id="@+id/row_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_edit" />
        
    </LinearLayout>

    

</LinearLayout>
